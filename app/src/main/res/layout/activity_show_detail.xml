<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/background"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_show_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/show_cover1"
            app:layout_constraintBottom_toBottomOf="@id/iv_background"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_background"
            app:layout_constraintWidth_percent="0.3" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:letterSpacing="0.1"
            android:text="首届”声音共和诗歌市集“海朋森X发光曲线X野外合作社"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_show_cover"
            app:layout_constraintTop_toTopOf="@id/iv_show_cover"
            app:layout_constraintWidth_percent="0.55" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="#摇滚乐，后摇滚/器乐摇滚，独立摇滚"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintWidth_percent="0.55" />

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/heart_grey"
            android:letterSpacing="0.1"
            app:layout_constraintBottom_toBottomOf="@id/btn_collection"
            app:layout_constraintHeight_percent="0.03"
            app:layout_constraintLeft_toLeftOf="@id/btn_collection"
            app:layout_constraintTop_toTopOf="@id/btn_collection"
            app:layout_constraintWidth_percent="0.06" />

        <Button
            android:id="@+id/btn_collection"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_collection_style"
            android:letterSpacing="0.1"
            android:paddingLeft="30dp"
            android:text="@string/collection"
            android:textColor="@color/white2"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_show_cover"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            app:layout_constraintRight_toRightOf="@id/tv_title"
            app:layout_constraintWidth_percent="0.28" />

        <ImageView
            android:id="@+id/iv_msg_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/mine_background_style"
            app:layout_constraintHeight_percent="0.18"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_background" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="¥80-380"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/iv_msg_background" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.1"
            android:text="开演时间待定"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_price"
            app:layout_constraintTop_toBottomOf="@id/tv_price" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/clock"
            app:layout_constraintBottom_toBottomOf="@id/tv_price"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintRight_toRightOf="@id/guideline4"
            app:layout_constraintTop_toTopOf="@id/tv_price"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.1"
            android:text="开演提醒"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_time"
            app:layout_constraintLeft_toLeftOf="@id/iv_time"
            app:layout_constraintRight_toRightOf="@id/iv_time"
            app:layout_constraintTop_toTopOf="@id/tv_time" />

        <ImageView
            android:id="@+id/iv_location_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/grey_background_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_msg_background"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="广州"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/iv_location_background"
            app:layout_constraintTop_toTopOf="@id/iv_location_background" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:letterSpacing="0.1"
            android:text="声音共和Livehouse"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tv_location"
            app:layout_constraintTop_toTopOf="@id/tv_location" />

        <TextView
            android:id="@+id/tv_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.1"
            android:text="广东省广州市海珠区新滘中路88号海珠同创汇东一街11号"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_location"
            app:layout_constraintTop_toBottomOf="@id/tv_location" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/location_black"
            app:layout_constraintBottom_toBottomOf="@id/iv_location_background"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintRight_toRightOf="@id/iv_location_background"
            app:layout_constraintTop_toTopOf="@id/iv_location_background"
            app:layout_constraintWidth_percent="0.06" />

        <ImageView
            android:id="@+id/rv_peoples"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mine_background_style"
            android:padding="20dp"
            app:layout_constraintHeight_percent="0.165"
            app:layout_constraintTop_toBottomOf="@id/iv_msg_background" />

        <ImageView
            android:id="@+id/iv_gift_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mine_background_style"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintTop_toBottomOf="@id/rv_peoples" />

        <TextView
            android:id="@+id/tv_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="@string/gift"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/iv_gift_background"
            app:layout_constraintTop_toTopOf="@id/iv_gift_background" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:letterSpacing="0.1"
            android:text="@string/more"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_gift"
            app:layout_constraintRight_toRightOf="@id/iv_gift_background"
            app:layout_constraintTop_toTopOf="@id/tv_gift" />

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/gift_style"
            app:layout_constraintBottom_toBottomOf="@id/iv_gift_background"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintLeft_toLeftOf="@id/iv_gift_background"
            app:layout_constraintRight_toRightOf="@id/iv_gift_background"
            app:layout_constraintTop_toBottomOf="@id/tv_gift"
            app:layout_constraintWidth_percent="0.86" />

        <ImageView
            android:id="@+id/iv_gift_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/portrait5"
            app:layout_constraintBottom_toBottomOf="@id/iv_gift"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintLeft_toLeftOf="@id/iv_gift"
            app:layout_constraintTop_toTopOf="@id/iv_gift"
            app:layout_constraintWidth_percent="0.18" />

        <TextView
            android:id="@+id/tv_gift_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:letterSpacing="0.1"
            android:text="海朋森《成长小说》LP黑胶唱片"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/iv_gift_cover"
            app:layout_constraintTop_toTopOf="@id/iv_gift_cover"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/tv_gift_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:letterSpacing="0.1"
            android:text="￥290"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_gift_cover"
            app:layout_constraintLeft_toRightOf="@id/iv_gift_cover"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_login_style"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/buy"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/iv_gift"
            app:layout_constraintRight_toRightOf="@id/iv_gift"
            app:layout_constraintWidth_percent="0.14" />

        <ImageView
            android:id="@+id/iv_show_msg_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mine_background_style"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintTop_toBottomOf="@id/iv_gift_background" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="@string/msg"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/iv_show_msg_background"
            app:layout_constraintTop_toTopOf="@id/iv_show_msg_background" />

        <TextView
            android:id="@+id/tv_location_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="@string/show_location"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_msg"
            app:layout_constraintTop_toBottomOf="@id/tv_msg"/>

        <TextView
            android:id="@+id/tv_the_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="声音共和Livehouse"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_location_hint"
            app:layout_constraintTop_toBottomOf="@id/tv_location_hint"/>

        <TextView
            android:id="@+id/tv_the_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="广东省广州市海珠区新滘中路88号海珠同创汇东一街11号"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_the_location"
            app:layout_constraintTop_toBottomOf="@id/tv_the_location"/>

        <TextView
            android:id="@+id/tv_time_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:letterSpacing="0.1"
            android:text="@string/show_time"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_the_address"
            app:layout_constraintTop_toBottomOf="@id/tv_the_address"/>
        <TextView
            android:id="@+id/tv_the_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="2022年4月10日"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_time_hint"
            app:layout_constraintTop_toBottomOf="@id/tv_time_hint"/>

        <TextView
            android:id="@+id/tv_order_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:letterSpacing="0.1"
            android:text="@string/show_order"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_the_time"
            app:layout_constraintTop_toBottomOf="@id/tv_the_time"/>
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:text="14:00-17:00海朋森X发光曲线（下午场）\n20:00-22:00 野外合作社（晚上场）"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_order_hint"
            app:layout_constraintTop_toBottomOf="@id/tv_order_hint"/>

        <ImageView
            android:id="@+id/iv_buy_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mine_background_style"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@id/iv_show_msg_background" />

        <TextView
            android:id="@+id/tv_buy_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:letterSpacing="0.1"
            android:text="@string/buy_know"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/iv_buy_background"
            app:layout_constraintLeft_toLeftOf="@id/tv_order"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>