<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.boom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Boom"
        tools:replace="android:theme">
        <activity
            android:name=".module.message.ChatDetailActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".module.homepage.ShowDetailActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".module.community.PostingActivity"
            android:exported="false" />
        <activity
            android:name=".module.mine.FocusOnActivity"
            android:exported="false" />
        <activity
            android:name=".module.setting.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".module.homepage.HomePageActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".module.login.CodeLoginActivity"
            android:exported="false" />
        <activity
            android:name=".module.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".module.login.PwdLoginActivity"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".base.activity.BaseActivity"
            android:exported="false" />
    </application>

</manifest>